<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Translator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>

        <item name="colorPrimary">@color/purple</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="cornerRadius">16dp</item>
    </style>

</resources>